generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Usuario {
  id        Int       @id @default(autoincrement())
  nome      String    @db.VarChar(45)
  email     String    @unique @db.VarChar(80)
  senha     String    @db.VarChar(100)
  foto      String?   @db.VarChar(45)
  acesso    String    @db.VarChar(45)
  deletedAt DateTime?

  feedbacks    Feedback[]
  endereco     Endereco?
  profissional Professional?

  @@map("usuarios")
}

model Especialidade {
  id   Int    @id @default(autoincrement())
  nome String @unique @db.VarChar(45)

  profissional Professional[]

  @@map("especialidades")
}

model Feedback {
  id        Int      @id @default(autoincrement())
  titulo    String   @db.VarChar(30)
  conteudo  String   @db.VarChar(200)
  createdAt DateTime @default(now())

  userId  Int
  usuario Usuario @relation(fields: [userId], references: [id])

  @@map("feedbacks")
}

model Endereco {
  id     Int    @id @default(autoincrement())
  cep    String @db.VarChar(9)
  cidade String @db.VarChar(45)
  bairro String @db.VarChar(45)
  numero String @db.VarChar(10)

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int     @unique

  @@map("enderecos")
}

model Professional {
  id        Int      @id @default(autoincrement())
  telefone  String   @unique @db.VarChar(20)
  crp       String   @unique @db.VarChar(20)
  descricao String   @db.VarChar(400)
  cpf       String   @unique @db.VarChar(14)
  aprovacao Boolean?

  especialidade   Especialidade @relation(fields: [especialidadeId], references: [id])
  especialidadeId Int

  usuario   Usuario @relation(fields: [usuarioId], references: [id])
  usuarioId Int     @unique

  @@map("profissionais")
}
